        "test": "jest --runInBand",
        "test:coverage": "npm run test -- --coverage",
        "start": "nodemon index.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "express": "^4.18.2",
        "express-graphql": "^0.12.0",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.3",
        "nodemon": "^2.0.22"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "mongodb-memory-server": "^8.12.2",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "modules/**/*.js",
            "!**/tests/**/*"
